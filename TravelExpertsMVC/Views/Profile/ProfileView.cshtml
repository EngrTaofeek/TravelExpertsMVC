@model ProfileViewModel
@{
	ViewBag.Title = "ProfileView";
}

<div>
	<form asp-action="ProfileView" method="get" asp-route-returnUrl="@ViewData["ReturnUrl"]">
		<div asp-validation-summary="All" class="text-danger"></div>

		@if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
		{
			<div>
				<img src="@Url.content(Model.ProfilePicturePath)" alt="Profile Picture" />
			</div>
		}
		else
		{
			<img src="~/images/DefaultProfilePicture.jpg"/>
		}

		<div>
			<label asp-for="FirstName" class="control-label"> First Name</label>
			<textarea asp-for="FirstName" class="form-control" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="LastName" class="control-label"> Last Name </label>
			<textarea asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Address" class="control-label">Address</label>
			<textarea asp-for="Address" class="form-control" />
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="City" class="control-label">City</label>
			<textarea asp-for="City" class="form-control" />
			<span asp-validation-for="City" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="Prov" class="control-label">Province</label>
			<textarea asp-for="Prov" class="form-control" />
			<span asp-validation-for="Prov" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Postal" class="control-label">Postal Code</label>
			<textarea asp-for="Postal" class="form-control" />
			<span asp-validation-for="Postal" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="Country" class="control-label">Country</label>
			<textarea asp-for="Country" class="form-control" />
			<span asp-validation-for="Country" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="HomePhone" class="control-label">Home Phone Number</label>
			<textarea asp-for="HomePhone" class="form-control" />
			<span asp-validation-for="HomePhone" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="BusPhone" class="control-label">Business Phone Number</label>
			<textarea asp-for="BusPhone" class="form-control" />
			<span asp-validation-for="BusPhone" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="Email" class="control-label">Email</label>
			<textarea asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="Password" class="control-label">Password</label>
			<textarea asp-for="Password" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="PasswordReset" class="control-label">Confirm Password</label>
			<textarea asp-for="PasswordReset" class="form-control" />
			<span asp-validation-for="PasswordReset" class="text-danger"></span>
		</div>
	</form>
</div>