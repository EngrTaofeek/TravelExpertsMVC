<div class="row justify-content-center" style="padding-bottom: 100px">
    <div class="col-md-8">
        <h3 class="text-center mb-4 fw-bold">
            Register to start enjoying your trips
        </h3>
        <form id="register-form" class="needs-validation" novalidate>
            <div class="row g-3">
                <!-- First Name -->
                <div class="col-md-6">
                    <label for="firstname" class="form-label">First Name</label>
                    <input type="text"
                           class="form-control"
                           id="firstname"
                           name="CustFirstName"
                           required
                           maxlength="25" />
                    <div class="form-text">
                        Enter your first name (letters only, max 25 characters).
                    </div>
                </div>

                <!-- Last Name -->
                <div class="col-md-6">
                    <label for="lastname" class="form-label">Last Name</label>
                    <input type="text"
                           class="form-control"
                           id="lastname"
                           name="CustLastName"
                           required
                           maxlength="25" />
                    <div class="form-text">
                        Enter your last name (letters only, max 25 characters).
                    </div>
                </div>

                <!-- Address -->
                <div class="col-md-12">
                    <label for="address" class="form-label">Address</label>
                    <input type="text"
                           class="form-control"
                           id="address"
                           name="CustAddress"
                           required
                           maxlength="75" />
                    <div class="form-text">
                        Enter your full address (max 75 characters).
                    </div>
                </div>

                <!-- City -->
                <div class="col-md-6">
                    <label for="city" class="form-label">City</label>
                    <input type="text"
                           class="form-control"
                           id="city"
                           name="CustCity"
                           required
                           maxlength="50" />
                    <div class="form-text">
                        Enter the city where you reside (max 50 characters).
                    </div>
                </div>

                <!-- Province -->
                <div class="col-md-6">
                    <label for="province" class="form-label">Province</label>
                    <input type="text"
                           class="form-control"
                           id="province"
                           name="CustProv"
                           required
                           maxlength="2" />
                    <div class="form-text">
                        Enter the province code (2 characters, e.g., AB for Alberta).
                    </div>
                </div>

                <!-- Postal Code -->
                <div class="col-md-6">
                    <label for="postalcode" class="form-label">Postal Code</label>
                    <input type="text"
                           class="form-control"
                           id="postalcode"
                           name="CustPostal"
                           required
                           maxlength="7" />
                    <div class="form-text">
                        Enter your postal code (e.g., T2P 2G8).
                    </div>
                </div>

                <!-- Country -->
                <div class="col-md-6">
                    <label for="country" class="form-label">Country (Optional)</label>
                    <input type="text"
                           class="form-control"
                           id="country"
                           name="CustCountry"
                           maxlength="25" />
                    <div class="form-text">
                        Enter your country (optional, max 25 characters).
                    </div>
                </div>

                <!-- Business Phone -->
                <div class="col-md-6">
                    <label for="busphone" class="form-label">Business Phone</label>
                    <input type="tel"
                           class="form-control"
                           id="busphone"
                           name="CustBusPhone"
                           required
                           maxlength="20" />
                    <div class="form-text">
                        Enter your business phone number (max 20 characters).
                    </div>
                </div>

                <!-- Home Phone -->
                <div class="col-md-6">
                    <label for="homephone" class="form-label">Home Phone (Optional)</label>
                    <input type="tel"
                           class="form-control"
                           id="homephone"
                           name="CustHomePhone"
                           maxlength="20" />
                    <div class="form-text">
                        Enter your home phone number (optional, max 20 characters).
                    </div>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input type="email"
                           class="form-control"
                           id="email"
                           name="CustEmail"
                           required
                           maxlength="50" />
                    <div class="form-text">
                        Enter a valid email address (max 50 characters).
                    </div>
                </div>

                <!-- Referred Agent Dropdown -->
                <div class="col-md-6">
                    <label for="agentId" class="form-label">Referred Agent (Optional)</label>
                    <select class="form-select" id="agentId" name="AgentId">
                        <option value="">Select an agent</option>
                        <!-- Options will be populated dynamically -->
                    </select>
                </div>

                <!-- Submit and Reset Buttons -->
                <div class="col-12 mt-4">
                    <button type="submit"
                            id="submit-btn"
                            class="btn btn-primary me-2">
                        Submit
                    </button>
                    <button type="reset" id="reset-btn" class="btn btn-secondary">
                        Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>