
@model TravelExpertsData.Models.Booking


<section class="cover-message">
    <div class="container">
        <h1 class="text-success">Thank You, @ViewData["FirstName"]!</h1>
        <img src="/images/thank-you.png" alt="Thank You" class="cover-image">
        <h2>Your booking has been received</h2>
        <p>Thank you for booking with us. Your booking code is:</p>
        <h2 id="booking-code">@Model.BookingNo</h2>
        <p>
            If you have any further questions, feel free to contact us or explore our contact page for more
            information.
        </p>
        <div class="mt-4">
            <a asp-action="GeneratePdf" asp-route-bookingNumber="@Model.BookingNo" class="btn btn-primary">
                Download PDF
            </a>
            <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</section>