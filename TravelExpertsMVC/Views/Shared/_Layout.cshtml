<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TravelExpertsMVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TravelExpertsMVC.styles.css" asp-append-version="true" />
</head>
<body>



	<header class="text-bg-dark">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">
            <div class="container-fluid">
                <!-- Left Section -->
                <div class="d-flex align-items-center">
                    <div style="display: grid; place-items: center;">
                        <img src="/images/logo.png" alt="mdo" width="60" height="60" class="rounded-circle">
                        <label class="nav-link px-2 text-white">TRAVEL EXPERTS</label>
                    </div>
                </div>

                <!-- Center Section (Navigation Links) -->
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link px-2 text-light @(ViewData["ActiveController"] as string == "Home" && ViewData["ActiveAction"] as string == "Index" ? "active" : "")" asp-area=""
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-light @(ViewData["ActiveController"] as string == "Booking" && ViewData["ActiveAction"] as string == "Index" ? "active" : "")" asp-area=""
                               asp-controller="Booking" asp-action="Index">Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-light @(ViewData["ActiveController"] as string == "Home" && ViewData["ActiveAction"] as string == "Contact" ? "active" : "")" asp-area=""
                               asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                </div>

                <!-- Right Section (Profile Header) -->
                <div class="profile-header ms-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div>
                            <a class="btn btn-outline-light me-2" asp-area="" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                            <a class="btn btn-outline-light me-2" asp-area="" asp-controller="Account" asp-action="Register">
                                Sign-up/Register
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown">
                            <a class="nav-link text-light dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="@(ViewData["ProfilePicture"] != null ? ViewData["ProfilePicture"] : "/images/defaultuser.jpg")" alt="Profile Picture" width="40" height="40" class="rounded-circle">
                                Hello, @ViewData["FirstName"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                        View Profile
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                        Log out
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>


	</header>





	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-light d-flex justify-content-between align-items-center">
            <!-- Left Section -->
            <div class="d-flex align-items-center">
                <a href="/" class="me-3 text-body-secondary text-decoration-none lh-1">
                    <img src="/images/logo.png" alt="Logo" width="60" height="60" class="rounded-circle">
                </a>
                <span>&copy; 2024 - TravelExperts</span>
            </div>

            <!-- Right Section (Social Media Links) -->
            <ul class="nav list-unstyled d-flex ms-auto">
                <li class="ms-3">
                    <a class="text-body-secondary" href="#">
                        <img src="/images/facebook.png"
                             alt="Facebook"
                             height="30"
                             width="30" />
                    </a>
                </li>
                <li class="ms-3">
                    <a class="text-body-secondary" href="#">
                        <img src="/images/instagram.png"
                             alt="Instagram"
                             height="30"
                             width="30" />
                    </a>
                </li>
                <li class="ms-3">
                    <a class="text-body-secondary" href="#">
                        <img src="/images/twitter.png"
                             alt="Twitter"
                             height="30"
                             width="30" />
                    </a>
                </li>
            </ul>
        </div>
    </footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
